{
  "name": "@lvncer/name-card",
  "version": "1.0.2",
  "description": "Markdown-based business card generator with CLI and Next.js web app",
  "main": "dist/index.js",
  "bin": {
    "name-card": "./bin/name-card.js"
  },
  "homepage": "https://name-card.vercel.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvncer/name-card.git"
  },
  "bugs": {
    "url": "https://github.com/lvncer/name-card/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "web:dev": "cd web && npm run dev",
    "web:build": "cd web && npm run build",
    "web:test": "cd web && npm run test",
    "web:test:run": "cd web && npm run test:run",
    "test:all": "npm run test:run && cd web && npm run test:run",
    "test:integration": "npm run build && timeout 10s node bin/name-card.js templates/basic.md --no-open || echo 'Integration test completed'",
    "postinstall": "cd web && npm install"
  },
  "keywords": [
    "business-card",
    "markdown",
    "pdf",
    "nextjs",
    "cli"
  ],
  "author": "lvncer",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^4.0.1",
    "commander": "^12.0.0",
    "gray-matter": "^4.0.3",
    "marked": "^12.0.0",
    "open": "^10.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "web",
    "templates",
    "README.md",
    "LICENSE"
  ]
}
